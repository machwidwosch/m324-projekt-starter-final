{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    "skipLibCheck": true
  },
  "include": ["server/**/*", "client/**/*", "__mocks__"],
  "exclude": ["server/**/*.spec.ts"]
}
